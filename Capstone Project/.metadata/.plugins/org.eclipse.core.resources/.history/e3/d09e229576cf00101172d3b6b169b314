package com.myfinbank.customer.entity;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import lombok.Data;

// Lombok @Data adds getters, setters, toString, equals, and hashCode
@Data
@Entity
@Table(name = "customers")
public class Customer {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    private String username;
    private String password; //this should be hashed
    private String email;
    private String role = "CUSTOMER"; // Default role
    private boolean active = true; // For Admin Deactivation
}