    <h2 class="mb-4">Customer List</h2>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <tr th:each="c : ${customers}">
            <td th:text="${c.id}"></td>
            <td th:text="${c.firstName + ' ' + c.lastName}"></td>
            <td th:text="${c.email}"></td>

            <td>
                <span th:if="${c.active}" class="badge bg-success">Active</span>
                <span th:if="${!c.active}" class="badge bg-danger">Inactive</span>
            </td>

            <td>
                <a th:href="@{'/admin/customers/' + ${c.id}}" class="btn btn-sm btn-primary">View</a>
                <a th:href="@{'/admin/customers/' + ${c.id} + '/edit'}" class="btn btn-sm btn-warning">Edit</a>

                <form th:action="@{'/admin/customers/' + ${c.id} + (c.active ? '/deactivate' : '/activate')}"
                      method="post" style="display: inline-block;">
                    <button class="btn btn-sm"
                            th:classappend="${c.active ? 'btn-danger' : 'btn-success'}"
                            th:text="${c.active ? 'Deactivate' : 'Activate'}">
                    </button>
                </form>
            </td>
        </tr>
        </tbody>

    </table>

