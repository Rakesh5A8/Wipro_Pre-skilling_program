package com.myfinbank.customer.service;

import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import com.myfinbank.customer.entity.Customer;
import com.myfinbank.customer.repository.CustomerRepository;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class CustomerServiceImpl implements CustomerService {

    private final CustomerRepository repo;

    private final BCryptPasswordEncoder encoder = new BCryptPasswordEncoder();

    @Override
    public Customer register(Customer customer) {
        customer.setPassword(encoder.encode(customer.getPassword()));
        return repo.save(customer);
    }

    @Override
    public Customer login(String username, String password) {
        Customer customer = repo.findByUsername(username);

        if (customer != null && encoder.matches(password, customer.getPassword())) {
            return customer;
        }
        return null;
    }
}
