package com.myfinbank.customer.controller;


import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

import com.myfinbank.customer.entity.Customer;
import com.myfinbank.customer.service.CustomerService;

import jakarta.servlet.http.HttpSession;
import lombok.RequiredArgsConstructor;

@Controller
@RequiredArgsConstructor
public class CustomerController {

    private final CustomerService customerService;

    // ------------------------- LOGIN PAGE -------------------------
    @GetMapping("/login")
    public String loginPage(Model model) {
        model.addAttribute("customer", new Customer());
        return "customer/login";
    }

    // ------------------------- REGISTER PAGE -------------------------
    @GetMapping("/register")
    public String registerPage(Model model) {
        model.addAttribute("customer", new Customer());
        return "customer/register";
    }

    // ------------------------- SAVE CUSTOMER -------------------------
    @PostMapping("/register")
    public String registerCustomer(Customer customer, Model model) {
        if (customerService.usernameExists(customer.getUsername())) {
            model.addAttribute("error", "Username already taken!");
            model.addAttribute("customer", new Customer());
            return "customer/register";
        }

        customerService.saveCustomer(customer);
        model.addAttribute("success", "Registration successful! Please login.");
        model.addAttribute("customer", new Customer());
        return "customer/login";
    }

    // ------------------------- LOGIN PROCESS -------------------------
    @PostMapping("/login")
    public String loginCustomer(Customer customer, Model model, HttpSession session) {
        Customer existing = customerService.authenticate(customer.getUsername(), customer.getPassword());

        if (existing == null) {
            model.addAttribute("error", "Invalid username or password!");
            model.addAttribute("customer", new Customer());
            return "customer/login";
        }

        session.setAttribute("customer", existing);
        session.setAttribute("username", existing.getUsername());
        return "customer/dashboard";
    }

    // ------------------------- LOGOUT -------------------------
    @GetMapping("/logout")
    public String logout(HttpSession session, Model model) {
        session.invalidate();
        model.addAttribute("customer", new Customer());
        model.addAttribute("success", "Logged out successfully!");
        return "customer/login";
    }

    // ------------------------- DASHBOARD PAGE -------------------------
    @GetMapping("/dashboard")
    public String dashboard(HttpSession session) {
        if (session.getAttribute("customer") == null) {
            return "redirect:/login";
        }
        return "customer/dashboard";
    }
}
