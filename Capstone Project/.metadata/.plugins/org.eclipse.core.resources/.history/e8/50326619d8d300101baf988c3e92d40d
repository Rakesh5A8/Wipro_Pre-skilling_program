    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <tr th:each="c : ${customers}">
            <td th:text="${c.id}"></td>
            <td th:text="${c.firstName + ' ' + c.lastName}"></td>
            <td th:text="${c.email}"></td>

            <td>
                <span th:if="${c.active}" class="badge bg-success">Active</span>
                <span th:if="${!c.active}" class="badge bg-danger">Inactive</span>
            </td>

            <td>
			    <!-- VIEW -->
			    <a class="btn btn-primary btn-sm"
			       th:href="@{'/admin/customers/' + ${c.id}}">
			        View
			    </a>
			
			    <!-- EDIT -->
			    <a class="btn btn-warning btn-sm"
			       th:href="@{'/admin/customers/' + ${c.id} + '/edit'}">
			        Edit
			    </a>
			
			    <!-- IF ACTIVE → show DEACTIVATE -->
			    <form th:if="${c.active}"
			          th:action="@{'/admin/customers/' + ${c.id} + '/deactivate'}"
			          method="post" style="display:inline">
			        <button class="btn btn-danger btn-sm">Deactivate</button>
			    </form>
			
			    <!-- IF INACTIVE → show ACTIVATE -->
			    <form th:if="${!c.active}"
			          th:action="@{'/admin/customers/' + ${c.id} + '/activate'}"
			          method="post" style="display:inline">
			        <button class="btn btn-success btn-sm">Activate</button>
			    </form>
			</td>


        </tr>
        </tbody>

    </table>

